@using AutomapperTest.ViewModel
@model IEnumerable<UserViewModel>
@{
    ViewBag.Title = "Home Page";
}
<h2>@ViewBag.Title</h2>

<a class="btn btn-primary" asp-action="Create" asp-area="" asp-controller="Home"><span class="glyphicon glyphicon-plus" /> Create</a>

<table class="table table-striped">
    <thead>
        <tr>
            <td class="col-md-6">Name</td>
            <td class="col-md-3">Email</td>
            <td class="col-md-3">Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-6">@item.Name</td>
                <td class="col-md-3">@item.Email</td>
                <td class="col-md-3">
                    <a asp-action="Details" asp-area="" asp-controller="Home" asp-route-id="@item.Id">details</a> |
                    <a asp-action="Delete" asp-area="" asp-controller="Home" asp-route-id="@item.Id">delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

