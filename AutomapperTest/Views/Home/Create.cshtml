@model AutomapperTest.ViewModel.UserViewModel
@{
    ViewBag.Title = "Create user";
    // https://docs.microsoft.com/en-us/aspnet/core/mvc/views/working-with-forms#the-validation-tag-helpers
}
<h2>@ViewBag.Title.</h2>

<form asp-action="Create" method="post" asp-controller="Home">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Name" class="col-md-3" ></label>
        <div class="col-md-9">
            <input asp-for="Name" class="form-control" autofocus tabindex="1"/>
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-md-3"></label>
        <div class="col-md-9">
            <input asp-for="Email" class="form-control" tabindex="2" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Password" class="col-md-3"></label>
        <div class="col-md-9">
            <input asp-for="Password" class="form-control" tabindex="3" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-3"></label>
        <div class="col-md-9">
            <input asp-for="ConfirmPassword" class="form-control" tabindex="4" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <div class="col-md-offset-3 col-md-9">
        <label class="checkbox-inline" tabindex="5">
            <input asp-for="AgreedToTerms"/> I agree to the <a asp-action="About" asp-controller="Home">Terms</a>
        </label>
        <br/>
        <span asp-validation-for="AgreedToTerms"></span>
    </div>


    <div class="col-md-offset-3 col-md-9">
        <button class="btn btn-primary" type="submit" tabindex="6">Save</button>
    </div>
</form>
